<h1>Eat Da Burger!</h1>
<h2>Add a Brand New Burger!</h2>
<form class="create-update-form" method="POST">
  <div class="form-group">
    <label for="ca">Make Burger</label>
    <input type="text" id="ca" name="newburgername">
  </div>
  <button type="submit">Add Da Burg!</button>
</form>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li class=noteated>
        {{this.burger_name}}
        <form action="/burgers/update/{{this.id}}?_method=PUT" method="PUT">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">Eat Da Burger!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li class=eated>
        {{this.burger_name}} got eated
        <!-- <form action="/burgers/update/{{this.id}}?_method=PUT" method="PUT">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">Don't Eat Da Burger!</button>
        </form> -->
      </li>
    {{/if}}
  {{/each}}
</ul>



